domain idltest.services

mixin SuccessData {
  greeting: str
}

mixin ErrorData {
  message: str
}

mixin Request {
  firstName: str
  secondName: str
}

service TestService {
  def simplex(a: str): str
  def simple(+Request): (+Request)

  // simple instance
  def greetSingleTypeIdOutput(firstName: str, secondName: str) => str

  // implicitly created structure
  def greetImplicitStructureOutput(firstName: str, secondName: str) => (a: str)

  // implicitly created structure
  def greetImplicitStructureMultiline
    (
      region: str,
      age: int8
    )
      =>
    (
        + SuccessData
        , bullshit: str
    )

  // implicitly created structure
  def greetImplicitStructureMultilineCurlyBraces
    {
      region: str,
      age: int8
    } => {
        + SuccessData
        , bullshit: str
    }

  // ADT
  def greetAlgebraicOutput(firstName: str, secondName: str) => ( SuccessData | ErrorData )

  // ADT
  def greetAlgebraicOutputMultiline(firstName: str, secondName: str) => (
     SuccessData
   | ErrorData
  )

  // ADT
  def greetAlgebraicOutputMultilineCurlyBraces
   {
     firstName: str
     secondName: str
   } => {
     SuccessData
     ErrorData
   }

}
