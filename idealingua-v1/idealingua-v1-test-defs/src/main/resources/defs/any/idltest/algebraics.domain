domain idltest.algebraics

data Success { message: str }
data Failure { code: int8 }


adt Alternative {
  Success as TestSuccess
  Failure
}

adt ShortSyntax = Success as TestSuccess | Failure

id AdtTestID {
    id: str
}

data ComplexAdt {
    id: AdtTestID
}

data ComplexAdt2 {
    id: AdtTestID
}

adt AdtTester {
    ComplexAdt
    ComplexAdt2
}

